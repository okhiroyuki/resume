{
  "plugins": [
    "asciidoctor"
  ],
  "filters": {
        "comments": true,
        "allowlist": {
            "allow": [
                ".*imagesdir.*",
                "路面平坦性計測",
                "関西地区責任者",
                ".*工事.*"
            ]
        }
  },
  "rules": {
    "@textlint-ja/no-synonyms": true,
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "sentence-length": false
    },
    "prh": {
      "rulePaths": [
        "./rules/prh.yml"
      ]
    }
  }
}
